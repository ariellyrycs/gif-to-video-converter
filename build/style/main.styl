html, body {
  height:100%;
  width:100%;
  overflow-y: hidden;
  overflow-x:  hidden;

}
.stage {
  display: block;
  width: inherit;
  height: inherit;
  background-color:red;
}
section.current {
  background-color: blue;
  position: absolute;
  bottom: 10%;
  width: inherit;
  height: inherit;
}
section:not(.current) {
  background-color: green;
  position:absolute;
  top: 90%;
  width: inherit;
  height: inherit;
}

.center {
  background-color: #f5f5f5;
  position: absolute;
  top:15%;
  height:80%;
}
.fetch-url {
  transform: scaleY(0);
  opacity:0;
  transform-origin: top;
  transition: transform 0.40s ease;
}
.show {
  opacity:1;
  transform: scaleY(1);
}
@media only screen and (max-width: 480px) {
  .center {
    width: 100%;
  }
  .center>*{
    width: 96%;
    margin: 20px 2%;
  }
  .fetch>button {
    width: 100%;
    margin-top:2px;
    margin-bottom:2px;
  }
}
@media only screen and (min-width: 480px) {
  .center {
    left: 10%;
    width: 80%;
  }
  .center>* {
    width: 60%;
    margin: 2px 20%;
  }
  .fetch>button {
    width: 46%;
  }
  .fetch>button:first-child{
    margin: 2px 8% 2px 0;
  }
}

.btn-file {
  color: #333;
  background-color: #fff;
  border-color: #ccc;
  position: relative;
}
.btn-file input[type=file] {
  position: absolute;
  top: 0;
  left: 0;
  margin: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  cursor: inherit;
  display: block;
}