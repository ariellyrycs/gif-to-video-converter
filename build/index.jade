doctype html
html
    head
        link(rel="stylesheet", type="text/css", href="./libs/bootstrap/dist/css/bootstrap.css")
        link(rel="stylesheet", type="text/css", href="./css/main.css")
    body
        main.stage
            section.current
                form.center(method="post", id="send-gif", enctype="multipart/form-data")
                    div.fetch
                        button.btn.btn-default.btn-file Upload
                            input(type="file")
                        button.btn.btn-default#show-url-file Fetch a Url
                    input.form-control.fetch-url(placeholder="Insert a url of the GIF")
                    input.btn-primary.btn(type="submit")
            section
        script(type="text/javascript", src="./libs/jquery/dist/jquery.min.js")
        script(type="text/javascript", src="./scripts/main.min.js")