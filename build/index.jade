doctype html
html
    head
        link(rel="stylesheet", type="text/css", href="./libs/bootstrap/dist/css/bootstrap.css")
        link(rel="stylesheet", type="text/css", href="./css/main.css")
    body
        main.stage
            section.current
                form.center(id="send-gif", action="#", enctype="multipart/form-data", method="post")
                    div.fetch
                        button.btn.btn-default.btn-file Upload
                            input#fileupload(type="file", accept="image/gif", name="img")
                        button.btn.btn-default#show-url-file Fetch a Url
                    div.image
                        img.show-image#insert-image
                    input.form-control.fetch-url(type="url", placeholder="Insert a url of the GIF", name="url")
                    input.btn-primary.btn(type="submit")
                    div.progress
                        div.progress-bar-striped.active.progress-bar(role="progressbar", aria-valuenow="40", aria-valuemin="0", aria-valuemax="100", style="width: 40")
                            span.sr-only
            section
                div.center
                    video(controls, width='400')
                        source(src='',class="video-response" type='video/mp4')
        script(type="text/javascript", src="./libs/jquery/dist/jquery.min.js")
        script(type="text/javascript", src="")
        script(type="text/javascript", src="./scripts/main.min.js")